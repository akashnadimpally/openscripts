{
  "openapi": "3.0.0",
  "info": {
    "title": "Azure and Azure DevOps Actions API",
    "version": "1.0.0",
    "description": "Defines actions for interacting with Azure and Azure DevOps."
  },
  "paths": {
    "/fetch:azure-template": {
      "post": {
        "summary": "Fetch an Azure Resource Template",
        "operationId": "fetchAzureTemplate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "templateUrl": {
                    "type": "string",
                    "description": "URL to the Azure Resource Template"
                  },
                  "parameters": {
                    "type": "object",
                    "description": "Template parameters for deployment"
                  }
                },
                "required": ["templateUrl"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Template fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "template": {
                      "type": "object",
                      "description": "Fetched template details"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/publish:azure-repo": {
      "post": {
        "summary": "Publish code to Azure DevOps repository",
        "operationId": "publishAzureRepo",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "organization": {
                    "type": "string",
                    "description": "Azure DevOps organization name"
                  },
                  "project": {
                    "type": "string",
                    "description": "Azure DevOps project name"
                  },
                  "repoName": {
                    "type": "string",
                    "description": "Target repository name"
                  },
                  "branch": {
                    "type": "string",
                    "description": "Branch name to publish to",
                    "default": "main"
                  },
                  "commitMessage": {
                    "type": "string",
                    "description": "Commit message"
                  }
                },
                "required": ["organization", "project", "repoName"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Repository published successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Status of the operation",
                      "enum": ["success", "failure"]
                    },
                    "details": {
                      "type": "string",
                      "description": "Additional details on the operation"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/catalog:register": {
      "post": {
        "summary": "Register an Azure DevOps resource in the catalog",
        "operationId": "registerAzureCatalog",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "catalogUrl": {
                    "type": "string",
                    "description": "URL of the catalog to register with"
                  },
                  "resourceDetails": {
                    "type": "object",
                    "description": "Details of the resource to register"
                  }
                },
                "required": ["catalogUrl", "resourceDetails"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resource registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Status of the operation",
                      "enum": ["success", "failure"]
                    },
                    "details": {
                      "type": "string",
                      "description": "Additional details on the operation"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ci:trigger-pipeline": {
      "post": {
        "summary": "Trigger an Azure DevOps pipeline",
        "operationId": "triggerAzurePipeline",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "organization": {
                    "type": "string",
                    "description": "Azure DevOps organization name"
                  },
                  "project": {
                    "type": "string",
                    "description": "Azure DevOps project name"
                  },
                  "pipelineId": {
                    "type": "integer",
                    "description": "ID of the pipeline to trigger"
                  },
                  "parameters": {
                    "type": "object",
                    "description": "Parameters to pass to the pipeline"
                  }
                },
                "required": ["organization", "project", "pipelineId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pipeline triggered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Status of the operation",
                      "enum": ["success", "failure"]
                    },
                    "details": {
                      "type": "string",
                      "description": "Additional details on the operation"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
